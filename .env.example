# Supabase Configuration
# REQUIRED: Get these values from https://app.supabase.com → Your Project → Settings → API
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Site URL
# The base URL where your application is deployed
VITE_SITE_URL=https://www.garantieproremorque.com

# Company Information
VITE_COMPANY_NAME=Location Pro-Remorque
VITE_SUPPORT_EMAIL=support@locationproremorque.ca

# Performance Configuration
# Cache time-to-live in milliseconds (default: 300000 = 5 minutes)
VITE_CACHE_TTL_MS=300000

# Slow query threshold in milliseconds (default: 2000 = 2 seconds)
VITE_SLOW_QUERY_MS=2000

# Default page size for paginated lists (default: 10)
VITE_DEFAULT_PAGE_SIZE=10

# Maximum number of retries for failed operations (default: 3)
VITE_MAX_RETRIES=3

# Base delay for retry operations in milliseconds (default: 1500)
VITE_RETRY_BASE_DELAY_MS=1500

# Maximum retry delay in milliseconds (default: 10000)
VITE_MAX_RETRY_DELAY_MS=10000

# Feature Flags
# Enable/disable specific features (true/false)
VITE_FEATURE_QB_SYNC=false
VITE_FEATURE_ACOMBA=false
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_PUSH=false

# Email Configuration
# Rate limit for emails per hour (default: 100)
VITE_EMAIL_RATE_LIMIT=100

# Logging Configuration
# Log level: debug, info, warn, error (default: info)
VITE_LOG_LEVEL=info

# Enable console logging in production (default: false)
# WARNING: Only enable for debugging, disable in production
VITE_ENABLE_CONSOLE_PROD=false
